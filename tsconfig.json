{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["dom","es2017","es6"],
    "sourceMap": false,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": ["node"]
  },
  "exclude": ["node_modules"]
}
